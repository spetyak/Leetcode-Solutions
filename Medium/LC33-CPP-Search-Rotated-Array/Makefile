
#--------------------------------------------------------------------------------
# Choose compiler and options
#--------------------------------------------------------------------------------

CC = g++
OPTS = -O0
DEBUG = -g

#--------------------------------------------------------------------------------
# Add directory names
#--------------------------------------------------------------------------------
# default
SRCDIR=./src
OBJDIR=./obj
INCDIR=./inc
BINDIR=.

#--------------------------------------------------------------------------------
# Add source files (use \ to continute line, not neeeded for last file)
#--------------------------------------------------------------------------------
# default
SRCS=$(SRCDIR)/lc33.cpp

#--------------------------------------------------------------------------------
# 
#--------------------------------------------------------------------------------
INCLUDE = $(addprefix -I,$(INCDIR))
OBJS = $(SRCS:$(SRCDIR)/%.cpp=$(OBJDIR)/%.o)
CFLAGS = $(OPTS) $(INCLUDE) $(DEBUG)

#--------------------------------------------------------------------------------
# 
#--------------------------------------------------------------------------------
TARGET = $(BINDIR)/lc33

all: $(TARGET) 

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $(OBJS)

$(OBJS): $(OBJDIR)/%.o : $(SRCDIR)/%.cpp
	$(CC) $(CFLAGS) -c $< -o $@

#--------------------------------------------------------------------------------
# 
#--------------------------------------------------------------------------------
clean:
	rm -f $(OBJS)

#--------------------------------------------------------------------------------
# 
#--------------------------------------------------------------------------------
cleanall:
	rm -f $(OBJS) $(BINDIR)/lc33
